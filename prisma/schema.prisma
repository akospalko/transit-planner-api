datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
}

enum TokenType {
  ACCESS
  REFRESH
}

model User {
  id            Int       @id @default(autoincrement())
  username      String    @unique
  email         String    @unique
  password      String
  roles         Role[]    @default([USER])
  refreshToken  String?  
  createdAt     DateTime  @default(now())
  verifiedAt    DateTime?
  blacklistedTokens BlacklistedToken[]
}

model BlacklistedToken {
  id          Int      @id @default(autoincrement())
  token       String   @unique  // Can be accessToken or refreshToken
  tokenType   TokenType
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}
