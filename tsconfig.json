{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".", // Change this to allow compiling from both `src/` and `prisma/`
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@prisma/*": ["prisma/*"] // Allow importing from `prisma/`
    }
  },
  "include": ["src", "prisma", "types"], // Include `prisma/`
  "exclude": ["node_modules"]
}
